<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:id="@+id/Add_time_slots"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/style_button_gradient"
        android:text="Add Time Slots"
        android:layout_marginLeft="-15dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:elevation="20dp"/>


    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:background="@drawable/style_gradient"
        android:text="Logout"
        android:textColor="#fff"
        android:textStyle="bold"/>

</RelativeLayout>